<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/torresdeserranos_container_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/main_bg_7">
  <LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:padding="17dp"
	    android:orientation="vertical"
	    android:gravity="center_vertical">
	    
        <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"/>
	
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="4"
	    android:orientation="horizontal"
	    android:padding="17dp"
	    android:gravity="center_vertical">
	 <Button 
	     android:id="@+id/torresdeserranos_galleryButton"
	     android:layout_width="fill_parent"
	     android:layout_height="fill_parent"
	     android:layout_weight="1"
	     android:text="@string/irGaleria"
	     android:textColor="@color/white"
	     android:background="@drawable/color_state_list_main_buttons"/>

	 <ImageButton
	     android:id="@+id/goLocationMapButton"
	     android:layout_width="fill_parent"
	     android:layout_height="match_parent"
	     android:layout_weight="5"
	     android:background="@drawable/color_state_list_main_buttons"
	     android:src="@drawable/action_go_map"/>
       
    </LinearLayout>
    
</LinearLayout>