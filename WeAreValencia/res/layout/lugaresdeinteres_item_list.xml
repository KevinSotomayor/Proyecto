<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/DividerListView">
	
    <LinearLayout 
               android:id="@+id/button_ficha_lugaresdeinteres_address"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
			   android:layout_marginLeft="10dp"
			   android:layout_marginRight="10dp"
			   android:layout_marginTop="10dp"
			   android:layout_marginBottom="5dp"
               android:gravity="center"
               android:background="@drawable/background_tarjeta">
	           <LinearLayout 
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_weight="8"
			        android:orientation="vertical"
			        android:layout_marginLeft="10dp"
			        android:layout_marginTop="5dp"
			        android:layout_marginBottom="10dp"
			        android:layout_marginRight="5dp"
			        android:gravity="left">
				    <TextView
				        android:id="@+id/textViewLugaresDeInteres_Title"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
						android:layout_margin="3dp"
				        android:text="@string/cargando"
				        android:textSize="@dimen/TextViewLugaresDeInteresTitle"
				        android:textColor="@color/TitleLugaresDeInteres"/>
				    
				    <TextView
				        android:id="@+id/textViewLugaresDeInteres_Content"
				        android:layout_width="fill_parent"
				        android:layout_height="wrap_content"
						android:layout_margin="3dp"
				        android:text="@string/cargando"
				        android:textSize="@dimen/TextViewLugaresDeInteresContent"
				        android:textColor="@color/ContentLugaresDeInteres"/>
			    </LinearLayout>
				<ImageView 
				    android:id="@+id/imageViewLugaresDeInteres_Icon"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:src="@drawable/map_static_drawable" 
				    android:adjustViewBounds="true"/>
				<LinearLayout 
				    android:id="@+id/layoutLugaresDeInteres_IrAlMapa"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:padding="2dp"
				    android:gravity="center"
				    android:background="@drawable/color_state_list_ir_mapa_layout">
					<ImageView 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_marginLeft="5dp"
					    android:src="@drawable/color_state_list_ir_mapa_icon" />
					<TextView 
					    android:id="@+id/button_lugaresDeInteres_irMapa"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:layout_weight="3"
		                android:padding="10dp"
					    android:text="@string/cargando"
					    android:textColor="@drawable/color_state_list_text_buttons"
					    android:textSize="@dimen/textViewFichaLista" />
				</LinearLayout>
			</LinearLayout>
	
</LinearLayout>