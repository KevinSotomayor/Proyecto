<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:layout_marginRight="15dp"
	        android:layout_marginBottom="5dp"
	        android:orientation="horizontal" 
	        android:gravity="center_horizontal"
	        android:background="@drawable/edittext_busqueda">
	    
	    <TextView
	        android:id="@+id/textViewLugaresDeInteres_ItemList"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="8"
	        android:layout_gravity="center"
			android:paddingLeft="10dp"
			android:paddingTop="1dp"
			android:paddingBottom="2dp"
	        android:text="@string/cargando"
	        android:textSize="@dimen/TextViewLugaresDeInteresItem"
	        android:textColor="@drawable/textview_color_state_list"/>
	    
		<ImageView
		    android:id="@+id/navigation_next"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="right"
		    android:paddingTop="1dp"
		    android:paddingBottom="2dp"
		    android:src="@drawable/imageview_color_state_list" />
		
	</LinearLayout>
</LinearLayout>