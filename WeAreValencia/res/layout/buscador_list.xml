<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutLugaresDeInteres"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <EditText 
        android:id="@+id/buscadorLugaresDeInteres"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textColorHint="@color/blackTransparency"
        android:hint="@string/buscarLugaresDeInteres"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:background="@color/orangeLight" >
        
        <ListView 
            android:id="@+id/listView_lugaresDeInteres"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:divider="@color/orangeLight"
       		android:dividerHeight="2dp"/>
    </LinearLayout>
    
    
</LinearLayout>