<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Bottom sombra transparente -->
    <item >
        <shape android:shape="rectangle">
        
            <solid android:color="#29000000"/>
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp" 
    		android:topLeftRadius="4dp" android:topRightRadius="4dp"/> 
            
        </shape>
    </item>
    
    <!-- fondo negro transparente -->
    <item 
        android:bottom="2px"
        android:right="2px"
        android:top="2px"
        android:left="2px">
        
         <shape android:shape="rectangle">
             
             <solid android:color="#DD000000"/>            
             <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp" 
    		android:topLeftRadius="4dp" android:topRightRadius="4dp"/>  
             
         </shape>
    </item>

</layer-list>