<?xml version="1.0" encoding="UTF-8"?> 
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Bottom 2dp sombra  -->
    <item >
        <shape android:shape="rectangle">
        
            <solid android:color="@color/greyShadow"/>
            <corners 
    		android:topLeftRadius="2dp" android:topRightRadius="2dp" 
    		android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/> 
            
        </shape>
    </item>
    
    <!-- fondo blanco -->
    <item 
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        
         <shape android:shape="rectangle">
             
             <solid android:color="@color/white"/>            
             <corners 	android:topLeftRadius="2dp" android:topRightRadius="2dp" 
             android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>  
             
         </shape>
    </item>

</layer-list>