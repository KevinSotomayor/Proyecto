<?xml version="1.0" encoding="UTF-8"?> 
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Bottom 2dp sombra  -->
    <item >
        <shape android:shape="rectangle">
        
            <solid android:color="@color/whitLight" />
            <corners 
	    		android:topLeftRadius="1dp" android:topRightRadius="1dp" 
	    		android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>  
            
        </shape>
    </item>
    
    <!-- fondo blanco -->
    <item 
        android:bottom="3px"
        android:left="0.1px"
        android:right="0.1px"
        android:top="0.1px">
        
         <shape android:shape="rectangle">
             
             <solid android:color="@color/orangeLight"/>
             <corners 
	    		android:topLeftRadius="1dp" android:topRightRadius="1dp" 
	    		android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>  
             
         </shape>
    </item>

</layer-list>